<%
    //variable settings
    if(typeof depth === 'undefined'){depth = 0;}
    if(typeof enableLoading === 'undefined'){enableLoading = null;}
    if(typeof ogTitle === 'undefined'){ogTitle = title;}
    if(typeof ogDescription === 'undefined'){ogDescription = description;}
    if(depth==0){
        srcPath = ".";
    }else if(depth==1){
        srcPath = "..";
    }else if(depth==2){
        srcPath = "../..";
    }
    linkList = [
        {
            name: "top",
            title: "HOME",
        },
        {
            name: "about",
            title: "活動概要",
        },
        {
            name: "news",
            title: "お知らせ",
        },
        {
            name: "event",
            title: "企画",
        },
        {
            name: "join",
            title: "入部希望の方へ",
        },
        {
            name: "contact",
            title: "お問い合わせ",
        }
    ];
-%>
<!DOCTYPE html>
<html lang="ja">
<head>
