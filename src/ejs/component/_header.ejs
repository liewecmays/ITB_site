    <meta name="twitter:card" content="<%= twitterCardType %>">
    <meta name="twitter:site" content="@Todai_Benronbu">
    <meta name="theme-color" content="#248bd1">
    <link rel="icon" href="<%=srcPath%>/assets/image/logo/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="<%=srcPath%>/assets/image/logo/apple-touch-icon.png">
    <%_ if(id=="top"){ -%>
    <link rel="stylesheet" href="assets/css/top.css">
    <%_ }else{ -%>
    <link rel="stylesheet" href="<%=srcPath%>/assets/css/subpage.css">
    <%_ if(id=="news"){ -%>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css">
    <%_ } -%>
    <%_ } -%>
    <noscript>
        <link rel="stylesheet" type="text/css" href="<%=srcPath%>/assets/css/noscript.css">
    </noscript>
</head>
<body ontouchstart>
    <header id="header">
        <div class="header__logo">
            <svg id="header__circle" xmlns="https://www.w3.org/2000/svg" viewBox="0 0 100 100">
                <circle class="circle" cx="-15" cy="50" r="100"></circle>
            </svg>
            <div class="header__title-short">ITB</div>
            <h1 class="header__title">第一高等学校<br>・東京大学弁論部</h1>
            <a href="<%=srcPath%>/"></a>
        </div>
        <div id="header__menu-trigger">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </header>
    <menu id="header-menu">
        <ul class="header-menu__list">
            <%_ for(let i=0;i<linkList.length;i++){ 
                let link = linkList[i];
            if(link["name"]==id){
            -%>
            <li class="header-menu__list-item is-current"><%= link["title"] %></li>
            <%_}else{-%>
            <li class="header-menu__list-item"><%= link["title"] -%><a href="<%=srcPath%>/<%if(link["name"]!="top"){%><%=link["name"]%><%}%>"></a></li>
            <%_}-%>
            <%_}-%>
        </ul>
    </menu>
    <div id="page-cover"></div>
    <%_ if(enableLoading){ -%>
    <div id="loading-screen" <%if(enableLoading){%>data-page-id="<%=enableLoading%>"<%}%>>
        <div id="loading-icon"></div>
        <%_ if(id=="top"){ -%>
        <div id="loading-screen__title" data-chaffle="en">第一高等学校・東京大学弁論部</div>
        <%_ } -%>
    </div>
    <%_ } -%>
    
